imap jk <ESC>
set ignorecase " Case insensitive search
set smartcase  " Non-case sensitive search
set incsearch  " Incremental search
set hlsearch   " Highlight search results

let mapleader=","

" Buffer
map gn :bn<cr>
map gp :bp<cr>
map gd :bd<cr>

" Motion
noremap H ^
noremap L $

" Scrolling
nnoremap <C-e> 3<C-e>
nnoremap <C-y> 3<C-y>

set scrolloff=3
